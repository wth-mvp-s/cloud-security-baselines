{
  "properties": {
    "displayName": "001-artifact-compliance-transmission",
    "description": "httpsOnly, FtpsOnly, minTlsVersion",
    "mode": "All",
    "policyRule": {
      "if": {
    "allOf": [
      { "field": "type", "equals": "Microsoft.Web/sites" },
      { "anyOf": [
        { "field": "Microsoft.Web/sites/httpsOnly", "equals": false },
        { "field": "Microsoft.Web/sites/siteConfig.ftpsState", "notEquals": "FtpsOnly" },
        {
          "field": "Microsoft.Web/sites/siteConfig.minTlsVersion",
          "less": 1.2
        }
      ]}
        ]
      },
      "then": {
        "effect": "deny"
      }
    }
  }
}
